<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="jeysmook_customer_price" resource="default" engine="innodb" comment="Jeysmook Customer Price Table">
        <column xsi:type="smallint" name="item_id" padding="6" unsigned="false" nullable="false" identity="true" comment="Item ID"/>
        <column xsi:type="int" name="product_id" padding="10" unsigned="true" nullable="false" comment="Product ID"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="false" comment="Customer ID"/>
        <column xsi:type="decimal" scale="4" precision="12" name="price" unsigned="false" nullable="false" comment="Product Price"/>
        <column xsi:type="decimal" name="qty" scale="4" precision="12" unsigned="false" nullable="true" comment="Quantity"/>
        <column xsi:type="smallint" name="website_id" unsigned="true" nullable="false" identity="false" default="0" comment="Website ID"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Modification Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="item_id"/>
        </constraint>
        <constraint xsi:type="foreign" onDelete="CASCADE"
                    table="jeysmook_customer_price" column="product_id"
                    referenceTable="catalog_product_entity" referenceColumn="entity_id"
                    referenceId="JEYSMOOK_CUSTOMER_PRICE_PRODUCT_ID_CATALOG_PRODUCT_ENTITY_ENTITY_ID"/>
        <constraint xsi:type="foreign" onDelete="CASCADE"
                    table="jeysmook_customer_price" column="customer_id"
                    referenceTable="customer_entity" referenceColumn="entity_id"
                    referenceId="JEYSMOOK_CUSTOMER_PRICE_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID"/>
        <constraint xsi:type="foreign" onDelete="CASCADE"
                    table="jeysmook_customer_price" column="website_id"
                    referenceTable="store_website" referenceColumn="website_id"
                    referenceId="JEYSMOOK_CUSTOMER_PRICE_WEBSITE_ID_STORE_WEBSITE_WEBSITE_ID"/>
        <index referenceId="JEYSMOOK_CUSTOMER_PRICE_PRODUCT_ID" indexType="btree">
            <column name="product_id"/>
        </index>
        <index referenceId="JEYSMOOK_CUSTOMER_PRICE_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>
    </table>
</schema>
